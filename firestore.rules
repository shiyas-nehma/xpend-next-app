// Firestore Security Rules for Xpend App (Development with Debug Support)
// Copy this content to your Firebase Console -> Firestore Database -> Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(resource) {
      return request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    function isSuperAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 1;
    }
    
    // Debug collection - Allow all operations for testing
    match /debug-test/{document} {
      allow read, write, create, delete: if true;
    }
    
    // Users collection - Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Subscription plans - Superadmin only for write, authenticated users can read
    match /subscription_plans/{planId} {
      allow read: if isAuthenticated();
      allow write, create, delete: if isSuperAdmin();
    }
    
    // Categories collection - User-specific data
    match /categories/{categoryId} {
      allow read, write, create, delete: if isAuthenticated();
    }
    
    // Accounts collection - User-specific data
    match /accounts/{accountId} {
      allow read, write, create, delete: if isAuthenticated();
    }
    
    // Expenses collection - User-specific data
    match /expenses/{expenseId} {
      allow read, write, create, delete: if isAuthenticated();
    }
    
    // Incomes collection - User-specific data
    match /incomes/{incomeId} {
      allow read, write, create, delete: if isAuthenticated();
    }
    
    // Goals collection - User-specific data
    match /goals/{goalId} {
      allow read, write, create, delete: if isAuthenticated();
    }
    
    // Notes collection - User-specific data
    match /notes/{noteId} {
      allow read, write, create, delete: if isAuthenticated();
    }
    
    // Subscription Plans collection - Super admin can write, everyone can read active plans
    // Subscription plans - All variations to handle collection naming inconsistencies  
    match /subscription_plans/{planId} {
      allow read, write, create, delete: if true; // Temporary: Allow all for testing
    }
    
    match /subscriptionPlans/{planId} {
      allow read, write, create, delete: if true; // Temporary: Allow all for testing
    }
    
    // User Subscriptions collection - Users can read/write their own subscriptions
    match /user_subscriptions/{subscriptionId} {
      allow read, write, create, delete: if isAuthenticated();
    }
    
    match /userSubscriptions/{subscriptionId} {
      allow read, write, create, delete: if isAuthenticated();
    }

    // Fallback rule for any other collections (temporary for development)
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}